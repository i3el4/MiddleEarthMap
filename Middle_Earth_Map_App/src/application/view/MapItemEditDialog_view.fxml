<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="450.0" prefWidth="425.0"
	stylesheets="@application.css" xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.controller.MapItemEditDialogController">
	<children>
		<VBox prefHeight="450.0" prefWidth="425.0"
			AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<Label styleClass="label-primary" text="Name:" />
				<TextField fx:id="name_field" minHeight="-Infinity"
					prefHeight="35.0" promptText="Geben Sie hier einen Namen ein"
					stylesheets="@application.css" />
				<Label text="Zusatzinformationen:" />
				<TextField fx:id="entry_field" promptText="Eintrag"
					styleClass="text-field" stylesheets="@application.css" />
				<TextField fx:id="details_field" promptText="Details"
					styleClass="text-field" stylesheets="@application.css" />
				<HBox minHeight="-Infinity" prefHeight="40.0" spacing="10.0"
					alignment="center_left">
					<children>
						<Button mnemonicParsing="false" onAction="#handleAddButton"
							styleClass="arrow-button" text="Hinzufügen" />
						<Button mnemonicParsing="false" styleClass="arrow-button"
							text="Bearbeiten" />
						<Button mnemonicParsing="false" styleClass="arrow-button"
							text="Eintrag Löschen" />
					</children>
				</HBox>
				<ScrollPane fitToHeight="true" fitToWidth="true"
					VBox.vgrow="ALWAYS">
					<content>
						<TableView fx:id="item_table"
							styleClass="table-row-cell" stylesheets="@application.css">
							<columns>
								<TableColumn fx:id="entry_column" minWidth="-1.0"
									prefWidth="100.0" text="Eintrag" />
								<TableColumn fx:id="details_column"
									prefWidth="2000.0" text="Details" />
							</columns>
						</TableView>
					</content>
				</ScrollPane>
				<ButtonBar minHeight="-Infinity" prefHeight="50.0">
					<buttons>
						<Button fx:id="save_button" defaultButton="true"
							mnemonicParsing="false" onAction="#handleSave" prefHeight="23.0"
							styleClass="button-primary" text="Speichern" />
						<Button fx:id="delete_button" cancelButton="true"
							mnemonicParsing="false" onAction="#handleDelete"
							styleClass="menu-button" text="Löschen" />
						<Button fx:id="cancle_button" cancelButton="true"
							layoutX="279.0" layoutY="22.0" mnemonicParsing="false"
							onAction="#handleCancle" styleClass="menu-button"
							text="Abbrechen" />
					</buttons>
				</ButtonBar>
			</children>
		</VBox>
	</children>
</AnchorPane>
